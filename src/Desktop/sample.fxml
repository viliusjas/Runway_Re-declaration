<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<VBox fx:id="root" prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Desktop.Controller">
<children>

    <!-- Top Menu Bars -->
    <MenuBar prefWidth="812.0" VBox.vgrow="NEVER">
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <Menu mnemonicParsing="false" text="Import..">
                        <items>
                            <MenuItem fx:id="importAirportButton" mnemonicParsing="false" onAction="#importAirportButtonClicked" text="Airport" />
                            <MenuItem fx:id="importObstaclesButton" mnemonicParsing="false" onAction="#importObstaclesButtonClicked" text="Obstacles" />
                            <MenuItem fx:id="importAircraftButton" mnemonicParsing="false" onAction="#importAircraftButtonClicked" text="Aircraft" />
                        </items>
                    </Menu>
                    <MenuItem fx:id="exportMenuButton" mnemonicParsing="false" onAction="#exportMenuButtonClicked" text="Export" />
                    <MenuItem fx:id="settingsMenuButton" mnemonicParsing="false" onAction="#settingsMenuButtonClicked" text="Settings" />
                    <MenuItem fx:id="quitMenuButton" mnemonicParsing="false" onAction="#quitMenuButtonClicked" text="Quit" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <items>
                    <MenuItem mnemonicParsing="false" text="Undo" />
                    <MenuItem mnemonicParsing="false" text="Redo" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" text="About this app.." />
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <!-- Main body -->
    <AnchorPane fx:id="anchorPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
        <children>
            <!-- Buttons at the bottom -->
            <HBox alignment="CENTER" layoutX="30.0" layoutY="659.0" prefHeight="58.0" prefWidth="950.0" spacing="10">
                <children>
                    <Button fx:id="switchViewsButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#switchViewsButtonClicked" text="Switch Views" />
<!--
                    <Button fx:id="addObstacleButton" disable="true" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#addObstacleButtonClicked" text="Add obstacle" />
-->
                    <ComboBox fx:id="addObstacleButton" onAction="#addObstacleButtonClicked" promptText="Add an obstacle">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <ComboBox fx:id="changeRunwaysMenu" onAction="#changeRunwayButtonClicked" promptText="Choose Runway">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <Button fx:id="showAirportDetailsButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#showAirportDetailsButtonClicked" text="Show airport details" />
                    <Button fx:id="showDetailsButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#showDetailsButtonClicked" text="Show runway details" />
                    <Button fx:id="showCalculationsButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#showCalculationsButtonClicked" text="Re-declare runways" />
                    <Button fx:id="resetButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#reset" text="Reset" />
                </children>
            </HBox>
            <!-- Side View GridPane -->
            <!--<BorderPane fx:id="sideViewPane" visible="true">

            </BorderPane>
            &lt;!&ndash; Top-down View GridPane &ndash;&gt;
            <BorderPane fx:id="topdownViewPane" visible="false">

            </BorderPane>-->
        </children>
    </AnchorPane>
</children>
</VBox>
